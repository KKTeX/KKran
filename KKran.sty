\newcommand{\masume@text@KKran}[1]{%
  \begingroup%
    \ltjsetparameter{kanjiskip=0pt}% 
    \ltjsetparameter{xkanjiskip=0pt}% 
    \setlength{\baselineskip}{\dimexpr\unit@KKran\relax}% 
    \fontsize{\unit@KKran}{\baselineskip}\selectfont%
